pipeline {
    agent any
    tools {
        maven 'Maven_3.9.8' // Replace with the specific Maven tool name and version
    }

    environment {
        def deployenv = "PROD"
    }

    stages {
        stage("Clean up"){
            steps {
                deleteDir()
            }
        }
        stage("Clone repo"){
            steps {
                sh "git clone https://github.com/jenkins-docs/simple-java-maven-app.git"
            }
        }
        stage("Build"){
            steps {
                dir("simple-java-maven-app"){
                    sh "mvn -Denforcer.skip=true clean install"
                }
            }
        }
        stage("Test"){
            steps{
                dir("simple-java-maven-app"){
                    sh "mvn -Denforcer.skip=truetest"
                }
                
            }
        }
    }
}
